<?xml version="1.0" encoding="utf-8"?>
<QwiredServerConfig>

  <!-- The name of the server (default: Qwired Server) -->
  <ServerName>Qwired Server</ServerName>

  <!-- A short description of the server. -->
  <ServerDescription>A freshly installed Qwired server.</ServerDescription>

  <!-- The TCP port this server is listening on. (Default: 2000) -->
  <ServerPort>2000</ServerPort>

  <!-- Number of seconds a temporary ban lasts. (Default: 1800) -->
  <BanTime>1800</IdleTime>

  <!-- Number of seconds after which to mark inactive clients as idle. (Default: 600) -->
  <IdleTime>600</IdleTime>

  <!-- Path to the SSL certificate. -->
  <PathSSLCert>certificate.pem</PathSSLCert>

  <!-- Path to the banner image. Size: 200x32 pixels. (Default: none) -->
  <PathBanner></PathBanner>

  <!-- Path to the files directory. (Default: files) -->
  <PathFiles>files</PathFiles>

  <!-- Path to the lock file. (Default: qwired_server.pid) -->
  <PathPID>qwired_server.pid</PathPID>

  <!-- Path to the accounts and groups database. (Default: accounts.db) -->
  <PathUserDB>accounts.db</PathUserDB>

  <!-- Path to the news database. (Default: news.db) -->
  <PathNewsDB>news.db</PathNewsDB>

  <!-- OpenSSL cipher lists to use for control and transfer connections. -->
  <!-- See ciphers(1) for information on its format. -->
  <!-- (default "ALL:NULL:!MD5:@STRENGTH" -->
  <SSLControlCiphers>ALL:NULL:!MD5:@STRENGTH</SSLControlCiphers>
  <SSLTransferCiphers>ALL:NULL:!MD5:@STRENGTH</SSLTransferCiphers>

</QwiredServerConfig>
